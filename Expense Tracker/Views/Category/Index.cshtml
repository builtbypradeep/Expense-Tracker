<div class="row">
    <div class="col-md-7">

        <ejs-grid id="categories" dataSource="@Model" gridLines="None" allowSorting="true" allowPaging="true">
            <e-grid-pagesettings pagesize="10"></e-grid-pagesettings>
            <e-grid-columns>
                <e-grid-column headerText="Category" field="TitleWithIcon"></e-grid-column>
                <e-grid-column headerText="Type" template="#TypeColumneTemplate" width="150px"></e-grid-column>
                <e-grid-column headerText="Actions" width="100px" template="#ActionColumneTemplate"></e-grid-column>
            </e-grid-columns>
        </ejs-grid>

    </div>

    <div class=" col-md-5">
        <div class="widget h-100 justify-content-center d-flex align-items-center" style="background-color:#212b36">
            <i class="fa-solid fa-piggy-bank fa-2xl"></i>
        </div>
    </div>
</div>

<script id="TypeColumneTemplate" type="text/x-template">

    ${if(Type=="Income")}
     <span class="badge bg-success">${Type}</span>
     ${else}
     <span class="badge bg-danger">${Type}</span>
     ${/if}

</script>

<script id="ActionColumneTemplate" type="text/x-template">

    <div class="d-flex flex-row justify-content-start">
        <a class="btn btn-sm no-a-decoration" href="/Category/AddOrEdit/${CategoryId}">
          <i class="fa-solid fa-pen fa-lg"></i>
               </a>

        <form method="post" action="/Category/Delete/${CategoryId}">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-sm btn-link no-a-decoration" 
            onclick="return confirm(&quot; Are you sure delete this record?&quot;)">
                <i class="fa-solid fa-trash-can fa-lg text-danger"></i>
            </button>
        </form>
    </div>

</script>
